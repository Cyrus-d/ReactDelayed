{
  "name": "react-delayed",
  "version": "0.1.0",
  "description": "Small component for delaying the mounting and unmounting of a child component for CSS animation purposes.",
  "main": "dist/react-delayed.js",
  "scripts": {
    "test": "ava",
    "build": "webpack",
    "watch": "webpack --watch",
    "sass": "node-sass ./example/css/default.scss -o ./example/css",
    "start": "babel-node example/server/default.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Wildhoney/ReactDelayed.git"
  },
  "keywords": [
    "delayed",
    "deferred",
    "delay",
    "delay",
    "render",
    "mount",
    "unmount",
    "css",
    "animation",
    "transition"
  ],
  "author": "Adam Timberlake <adam.timberlake@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Wildhoney/ReactDelayed/issues"
  },
  "homepage": "https://github.com/Wildhoney/ReactDelayed#readme",
  "devDependencies": {
    "async-delay": "~1.0.3",
    "ava": "~0.18.2",
    "babel-cli": "~6.24.0",
    "babel-loader": "~6.4.1",
    "babel-polyfill": "~6.23.0",
    "babel-preset-es2015": "~6.24.0",
    "babel-preset-react": "~6.23.0",
    "babel-preset-stage-0": "~6.22.0",
    "enzyme": "~2.8.0",
    "es6-symbol": "~3.1.1",
    "express": "~4.15.2",
    "jsdom": "~9.12.0",
    "node-sass": "~4.5.1",
    "prop-types": "~15.5.8",
    "react-addons-test-utils": "~15.4.2",
    "react-dom": "~15.4.2",
    "sinon": "~2.1.0",
    "webpack": "~2.3.2"
  },
  "dependencies": {
    "react": ">=15.4.2"
  },
  "ava": {
    "files": [
      "tests/*.test.js"
    ],
    "babel": "inherit",
    "require": [
      "babel-register",
      "babel-polyfill",
      "./tests/helpers/browser-env.js"
    ]
  }
}
